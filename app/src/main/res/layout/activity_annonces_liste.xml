<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnnoncesListe">

    <LinearLayout
        android:id="@+id/linearLayoutFiltres"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="#6A673AB7"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/valueBarAnnee"
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="AnnÃ©ee max :"
                android:gravity="center"/>

            <SeekBar
                android:id="@+id/seekBarAnnee"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:thumbTint="@color/purple_200"
                android:progressTint="#673AB7"
                android:centerColor="@color/purple_200"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/valueBarPrix"
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Prix max : "
                android:gravity="center"/>

            <SeekBar
                android:id="@+id/seekBarPrix"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:progressTint="#673AB7"
                android:thumbTint="@color/purple_200" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutFiltres" />
</androidx.constraintlayout.widget.ConstraintLayout>